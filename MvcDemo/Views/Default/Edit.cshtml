@model MvcDemo.Models.Student
@{
    ViewBag.Title = "Edit the Detail";
}
@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <h2> Edit The Detail &nbsp;&nbsp;<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
        <hr />
        <form>
            <div class="form-group">
                @Html.LabelFor(m => m.RollNo, new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextBox("RollNo", null, htmlAttributes: new { @class = "form-control text-box single-line", type = "number", @readonly = true })
                    @Html.ValidationMessageFor(m => m.RollNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("First Name:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextBox("FName", null, htmlAttributes: new { @class = "form-control text-box single-line" })
                    @Html.ValidationMessageFor(m => m.FName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Last Name:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.TextBox("LName", null, htmlAttributes: new { @class = "form-control text-box single-line" })
                    @Html.ValidationMessageFor(m => m.LName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-default" />
                    <input type="reset" value="Reset" class="btn btn-danger" />
                </div>
            </div>

        </form>
    </div>
    <a href="Index">Back to Menu</a>
}