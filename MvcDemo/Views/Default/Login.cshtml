@model MvcDemo.Models.Student
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{
   
    <div class="form-horizontal">
        <h2>Login</h2>
        <hr/>
        @if (@ViewBag.notfound != null)
        {
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
            <strong>@ViewBag.notfound</strong>
        </div>
        }
        <div class="form-group">
            <label class="control-label col-md-2">Email ID</label>
            <div class="col-md-4">
                <input type="text" name="EmailID" class="form-control" id="usr" placeholder="Enter Email Id">
                @Html.ValidationMessageFor(m => m.EmailID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Password</label>
            <div class="col-md-4">
                <input type="password" name="pswd" class="form-control" id="usr" placeholder="Enter Password">
                @Html.ValidationMessageFor(m => m.Pswd, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-success">
            </div>
        </div>
        <div></div>
    </div>
    <a href="Index">Back to Index</a>
}
